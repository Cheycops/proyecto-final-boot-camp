<div class="container">
    <div class="row mt-5">
        <h3 class="text-center text-uppercase p-2"> ganadores premio goty</h3>

        {{#if personas}}

            <table class="table text-center">
                <thead>
                    <tr class="table-dark">
                        <th scope="col" class="col-4">Ganador      </th>
                        <th scope="col">GENERO              </th>
                        <th scope="col">DESARROLADOR        </th>
                        <th scope="col">DISTRIBUIDOR        </th>
                        <th scope="col">PLATAFORMAS         </th>
                        <th scope="col">IMAGEN              </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    
                    {{#each personas}}
                        <tr>
                            <td> {{titulo}} </td>
                            <td> {{genero}} </td>
                            <td> {{desarrollador}} </td>
                            <td> {{distribuidor}} </td>
                            <td> {{plataformas}} </td>
                            <td> {{img}} </td>
                            <td>
                                <div class="btn-group">
                                    <a href="/edit/{{id}}" class="btn btn-warning p-2">
                                        <i class="fa-solid fa-pencil"></i>
                                    </a>
                                    <a href="/delete/{{id}}" class="btn btn-danger p-2">
                                        <i class="fa-solid fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        {{else}}

            <div class="card text-center mx-auto">
                <div class="card-header">
                    <h3> Debes crear una persona</h3>
                </div>
                <div class="card-body">
                    <p>Presiona este boton para que puedas registrar a una persona en la aplicacion</p>
                    <a href="/add" class="btn btn-primary"> Ir a crear</a>
                </div>
            </div>

        {{/if}}



    </div>
</div>