<div class="container">
    <div class="row mt-5">
        <h3 class="text-center text-uppercase p-2"> ganadores premio goty</h3>

        {{#if ganadores}}

            <table class="table text-center">
                <thead>
                    <tr class="table-dark">
                        <th scope="col" class="col-2">Imagen              </th>
                        <th scope="col" class="col-2">Ganador    </th>
                        <th scope="col">Genero              </th>
                        <th scope="col">Desarrollador        </th>
                        <th scope="col">Distribuidor        </th>
                        <th scope="col">Plataforma         </th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    
                    {{#each ganadores}}
                        <tr>
                            <td><img src="/uploads/{{img}}" class="imglist rounded-circle"> </td>
                            <td> {{titulo}} </td>
                            <td> {{genero}} </td>
                            <td> {{desarrollador}} </td>
                            <td> {{distribuidor}} </td>
                            <td> {{plataformas}} </td>
                            <td>
                                <div class="btn-group">
                                    <a href="/edit/{{id}}" class="btn btn-warning p-2">
                                        <i class="fa-solid fa-pencil"></i>
                                    </a>
                                    <a href="/delete/{{id}}" class="btn btn-danger p-2">
                                        <i class="fa-solid fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        {{else}}

            <div class="card text-center mx-auto">
                <div class="card-header">
                    <h3> Debes Agregar un Ganador</h3>
                </div>
                <div class="card-body">
                    <p>Presiona este boton para que puedas registrar un Ganador</p>
                    <a href="/add" class="btn btn-primary"> Ir a crear</a>
                </div>
            </div>

        {{/if}}



    </div>
</div>