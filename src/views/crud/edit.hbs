<div class="container p-4">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card text-center addcard mx-4">
                <div class="card-header">
                    <h3 class="text-uppercase">Editar un Ganador del premio goty</h3>
                </div>
                <div class="card-body mx-4">
                    <form action="/edit/{{ganador.id}}" method="post" enctype="multipart/form-data" class="pasds mx-4">
                        <div class="input-group mt-2 foradd mx-4">
                            <label for="titulo" class="input-group-text">Titulo del Ganador</label>
                            <input class="from-control " type="text" name="titulo" id="titulo" value="{{ganador.titulo}}">
                        </div>
                        <div class="input-group mt-2 foradd mx-4">
                            <label for="genero" class="input-group-text">Genero del Videojuego</label>
                            <input class="from-control " type="text" name="genero" id="genero" value="{{ganador.genero}}"  required>
                        </div>
                        <div class="input-group mt-2 foradd mx-4">
                            <label for="desarrollador" class="input-group-text">Empresa Desarrolladora</label>
                            <input class="from-control " type="text" name="desarrollador" id="desarrollador" value="{{ganador.desarrollador}}"  required>
                        </div>
                        <div class="input-group mt-2 foradd mx-4">
                            <label for="distribuidor" class="input-group-text">Empresa Distribuidora</label>
                            <input class="from-control " type="text" name="distribuidor" id="distribuidor" value="{{ganador.distribuidor}}"  required>
                        </div>
                        <div class="input-group mt-2 foradd mx-4">
                            <label for="plataformas" class="input-group-text">Plataformas donde juega</label>
                            <input class="from-control " type="text" name="plataformas" id="plataformas" value="{{ganador.plataformas}}"  required>
                        </div>
                        <div class="input-group mt-2 ">
                            <input class="from-control  mx-4" type="file" name="file" id="file" required>
                        </div>
                        <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success">ACTUALIZAR</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>