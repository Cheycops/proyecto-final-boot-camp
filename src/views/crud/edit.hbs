<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">Editar Persona</h3>
                </div>
                <div class="card-body">
                    <form action="/edit/{{persona.id}}" method="post">
                        <div class="input-group mt-2">
                            <label for="name" class="input-group-text">Nombre Persona</label>
                            <input class="from-control" type="text" name="name" id="name" placeholder="Ejemplo: Cristian Ferney" value="{{persona.name}}" autofocus required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="lastname" class="input-group-text">Apellido Persona</label>
                            <input class="from-control" type="text" name="lastname" id="lastname" placeholder="Ejemplo: Chacon Rodriguez" value="{{persona.lastname}}"  required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="AGE" class="input-group-text"> Edad </label>
                            <input class="from-control" type="number" name="AGE" id="AGE" placeholder="0" value="{{persona.AGE}}" required>
                        </div>
                        <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success">ACTUALIZAR</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>